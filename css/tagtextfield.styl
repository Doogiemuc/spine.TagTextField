
.tagtextfield
    font-size: 10pt

.tagtextfield_glow
    outline: none;
    border-color: #9ecaed;
    box-shadow: 0 0 10px #9ecaed;

.tagtextfield .tag
    border-radius(1em)
    border: none
    font-size: 10pt
    color: #FFF
    vbg-gradient(#CCF, #AAF)
    padding: 0 0 0 0.5em
    margin: 0 0 0 3px
    cursor: default

.tagtextfield i.icon-remove
    color:#999
    margin-right:3px
    cursor: default
    color: red
    visibility: hidden

.tagtextfield .taginput
    border-radius(1em)
    border: none
    width: 50px
    font-family: Verdana;
    font-size: 10pt
    color: #FFF
    background: #CCF
    padding: 0 5px 0px 5px
    margin: 0 0 0 3px
    vertical-align: baseline
    &:focus
        outline-width: 0

.mouseover
    background: #CCF !important

