


.tagtextfield
    background-color: #F2F2F2
    font-size: 10pt
    width: 50%
    margin: 0 0 0 3px

.tagtextfield_glow
    outline: none;
    border-color: #9ecaed;
    box-shadow: 0 0 10px #9ecaed;


.tagtextfield .tag
    border-radius: 5em
    /*-moz-border-radius: 5em */
    border: 1px solid #AAE
    font-size: 10pt
    color: #FFF
    vbg-gradient(#CCF, #AAF)
    padding: 0px 5px 0px 10px
    margin: 0 3px 0 0
    cursor: default

.tagtextfield .tag .tagDelete
    visibility: hidden
    color: #F00

.tagtextfield .taginput
    border-radius: 5em
    /*-moz-border-radius: 5em*/
    border: none  //1px solid #AAE
    font-size: 10pt
    color: #FFF
    background: #CCF
    padding: 0 10px 0 10px
    margin: 0
    &:focus
        outline-width: 0

.mouseover
    background: #AAC !important

